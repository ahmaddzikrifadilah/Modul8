#include <iostream>

using namespace std;

int main()
{
    int a=1,i,j=0;
    int x=1;
    cout<<"masukan angka :";
    cin>>i;
    while(x<(i-1)){
        cout<<a;
        a=a+(a-1);
        j=j+a;
        cout<<a;
        j=j+a;
        a=a+1;
        x=x+1;
    }
    cout<<"\njumlah="<<j;


    return 0;
}
